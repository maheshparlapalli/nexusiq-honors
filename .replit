modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mongodb", "unzip", "glib", "nss", "nspr", "at-spi2-atk", "cups", "libdrm", "libxkbcommon", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXfixes", "xorg.libXrandr", "mesa", "expat", "xorg.libxcb", "xorg.libX11", "pango", "cairo", "alsa-lib", "gtk3", "chromium"]

[userenv]

[userenv.development]
PORT = "4005"
NODE_ENV = "development"
HONORS_PUBLIC_URL = "http://localhost:4005"
PUBLIC_VIEW_BASE_PATH = "/api/v1/honors/public"
HONOR_SLUG_LENGTH = "8"
WORKER_CONCURRENCY = "3"
AGENDA_COLLECTION = "agendaJobs"
AGENDA_POOL_TIME = "5000"
PUPPETEER_TIMEOUT = "60000"
JWT_SECRET = "dev-secret-change-in-production"
JWT_EXPIRY = "7d"
LOG_LEVEL = "info"
ENABLE_DEBUG_LOGS = "false"

[userenv.shared]
MONGO_URI = "mongodb+srv://NexsaaAdmin:NexsaaMongoAdmin@nexusiq.84uid.mongodb.net/nexusiq-honors"
AWS_REGION = "eu-north-1"
AWS_S3_BUCKET = "nexsaaportal"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-dev.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 4005
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41635
externalPort = 3002

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "node dist/worker.js & node dist/index.js"]
build = ["npm", "run", "build"]
