# -----------------------------------------
# Server Configuration
# -----------------------------------------
PORT=5000
NODE_ENV=development

# -----------------------------------------
# MongoDB
# -----------------------------------------
MONGO_URI=mongodb://localhost:27017/nexsaa_honors_dev

# -----------------------------------------
# AWS S3 Storage (for PDFs, PNGs, assets)
# -----------------------------------------
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Optional: Custom CDN domain for S3
AWS_CDN_BASE_URL=https://your-cdn-url.com

# -----------------------------------------
# Honors Service Configuration
# -----------------------------------------
HONORS_PUBLIC_URL=http://localhost:4005   # Base URL for public certificate links
PUBLIC_VIEW_BASE_PATH=/api/v1/honors/public

# Unique Slug Settings
HONOR_SLUG_LENGTH=8

# -----------------------------------------
# Worker / Queue (Agenda)
# -----------------------------------------
WORKER_CONCURRENCY=3
AGENDA_COLLECTION=agendaJobs
AGENDA_POOL_TIME=5000

# Override Mongo for Agenda (optional)
AGENDA_MONGO_URI=

# -----------------------------------------
# Puppeteer
# -----------------------------------------
PUPPETEER_EXECUTABLE_PATH=  # Leave empty for default Chromium
PUPPETEER_TIMEOUT=60000

# -----------------------------------------
# Authentication (Future: UMS Integration)
# -----------------------------------------
JWT_SECRET=change_this_secret
JWT_EXPIRY=7d
UMS_BASE_URL=https://ums.nexsaa.com

# -----------------------------------------
# Templates / Assets
# -----------------------------------------
TEMPLATE_STORAGE_BUCKET=your-s3-bucket-name
TEMPLATE_CDN_URL=

# -----------------------------------------
# Optional Logging Configuration
# -----------------------------------------
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# -----------------------------------------
# Email (Optional Future Feature)
# -----------------------------------------
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@nexsaa.com
