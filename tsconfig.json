{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": [
    "server/**/*",
    "client/**/*",
    "shared/**/*"
  ]
}